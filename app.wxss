/**weUI**/
@import '/plugins/weui/weui.wxss';

view,block,text,textarea,input{
  color: #353a3f;
}
/**app.wxss**/
.container {
  min-height: 100vh;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
} 

.red{ color: #f00;}

.mt20{ margin-top: 20rpx!important;}
.mt30{ margin-top: 30rpx!important;}
.mt40{ margin-top: 40rpx!important;}
.mt50{ margin-top: 50rpx!important;}

.placeholder { color: #bbb; }

.btn{
  color: #fff;
  display: block;
  background-image: linear-gradient(-90deg, #fe6941 0%, #fe8220 100%);
	text-align: center;
	border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  padding:0 75rpx;
}
.btn_line{
  background: #fff;
  color:#fe8220;
  border: #fe6941 solid 1rpx;
}