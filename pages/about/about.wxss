/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.page_box{
  margin-top: 10px;
  padding: 10px 15px;
}
.page_tit{
  font-size: 18px;
  text-align: center;
}
.about_info{
  display: block;
  margin-top: 10px;
  font-size: 14px;
  text-indent: 14px;
}

.form_list{margin-top: 10px;}
.form_list input,.form_list textarea{
  border: 1px solid #ddd;
  padding:4px 10px;
  font-size: 14px;
}
.form_list textarea{
  width: 100%;
  height: 80px;
  box-sizing: border-box;
}