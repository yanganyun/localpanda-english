/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container{
  background-color: #f5f5f5;
}
.page_box{
  margin-top: 10px;
  padding: 10px 15px;
  background-color: #fff;
  min-height: 200px;
}
.page_tit{
  font-size: 14px;
}

.pin_list_box{
  overflow: hidden;
  margin-top: 30rpx;
}
.pin_list{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.pin_list image{
  display: block;
  width: 100%;
  height: 100%;
}