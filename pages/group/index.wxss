/**index.wxss**/
.index_page{
  padding-bottom: 60rpx;
}

.header{
  height: 80rpx;
}
.logo{
  margin-left: 30rpx;
  width: 451rpx;
  height: 100%;
}
.logo image{
  width: 100%;
  height: 100%;
}

.main_box image{
  width: 100%;
  vertical-align: top;
}
.banner image{
  height: 420rpx;
}

.home_main1 image{
  height: 460rpx;
}


.home_main2{
  width: 92%;
  padding: 55rpx 4% 80rpx;
}
.group_box{
  padding: 50rpx 0;
  border-radius: 10rpx;
  background-color: #ffffff;
	box-shadow: 0px 8px 40px 0px rgba(0, 0, 0, 0.1);
}
.group_tit{
  
  color: #fe6941;
  font-size: 40rpx;
  text-align: center;
}
.group_time{
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #242424;
}
.group_list_box{
  overflow: hidden;
  padding: 20rpx 0 20rpx;
  
}

.group_list{
  float: left;
  margin: 10rpx 0 30rpx 30rpx;
}
.group_photo{
  box-sizing: border-box;
  width: 134rpx;
	height: 134rpx;
	border: solid 10rpx #ffe6d2;
  border-radius: 50%;
  overflow: hidden;
}
.group_photo image{
  width: 100%;
  height: 100%;
}
.group_username{ text-align: center; font-size: 20rpx;color: #ffe6d2; margin-top: 20rpx;}

.group_text{
  padding:0 40rpx 0 60rpx;
  position: relative;
  color: #242424;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.group_text .text_dian{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #fe8220;
  float: left;
  margin-left: -20rpx;
  margin-top: 12rpx;
}
.group_active .group_photo{
  border-color: #fe8220;
}
.group_active .group_username{
  color: #fe8220;
}

.wx_tip{
  color: #949494;
  text-align: center;
  font-size: 20rpx;
  margin-top: 60rpx;
}


.home_main3 image{
  height: 1407rpx;
}


.home_main4 image{
  height: 789rpx;
}



.index_tit{
  text-align: center;
  padding-top: 20rpx;
  position: relative;
  color: #242424;
  font-size: 44rpx;
  display: block;
}
.index_tit::before{
  content: '';
  display: block;
  margin-left:-18rpx;
  width: 36rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #fe8220;
  position: absolute;
  left: 50%;
  top: 0;
}

.home_main5{
  margin: 100rpx 0 60rpx 0;
}
.swiper_show{
  text-align: center;
  height: 620rpx!important;
}
.swiper_list{
  width: 640rpx!important;
  padding: 30rpx 0 30rpx 30rpx;
  overflow: inherit!important;
}
.swiper_box{
  border-radius: 10rpx;
  box-shadow: 0px 8px 40px 0px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}
.swiper_box .slide-image{
  width: 100%;
  height: 426rpx;
}
.swiper_box text{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #242424;
}


.home_main6{
  padding: 100rpx 0;
  background-color: #f7f7f7;
}
.swiper_teacher{
  position: relative;
}
.swiper_show2{
  text-align: center;
  height: 490rpx!important;
  margin-top: 40rpx;
}
.swiper_photo_box{
  width: 216rpx;
  height: 216rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
}
.swiper_photo_box image{
  width: 100%;
  height: 100%;
}
.teacher_name{
  font-size: 34rpx;
  margin-top: 10rpx;
  font-weight: bold;
}
.teacher_info{
  display: block;
  color: #242424;
  font-size: 24rpx;
  line-height: 30rpx;
  padding: 15rpx 30rpx;
}


.home_main7 image{
  height: 869rpx;
}


.chengnuo image{
  width: 100%;
  height: 531rpx;
}
.service image{
  width: 100%;
  height: 920rpx;
}

.btn_box{
  padding: 30rpx 0;
  text-align: center;
}
.btn_box .btn{
  display: inline-block;
  margin: 0 1%;
  width: 45%;
  padding: 0 0;
  vertical-align: top;
}






.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.top_banner{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.top_banner .slide-image{
  width: 100%;
}
.top_banner image{
  height: 100%;
}


.group_list_user{
  overflow: hidden;
  margin-top: 30rpx;
}
.pin_list{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.pin_list image{
  display: block;
  width: 100%;
  height: 100%;
}