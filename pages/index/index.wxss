/**index.wxss**/
.index_page{
  padding-bottom: 60rpx;
}

.header{
  height: 80rpx;
}
.logo{
  margin-left: 30rpx;
  width: 451rpx;
  height: 100%;
}
.logo image{
  width: 100%;
  height: 100%;
}


.chengnuo image{
  width: 100%;
  height: 531rpx;
}
.service image{
  width: 100%;
  height: 920rpx;
}

.btn_box{
  padding: 30rpx 0;
  text-align: center;
}
.btn_box .btn{
  display: inline-block;
  margin: 0 1%;
  width: 45%;
  vertical-align: top;
}






.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.top_banner{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.top_banner .slide-image{
  width: 100%;
}
.top_banner image{
  height: 100%;
}


.group_list_user{
  overflow: hidden;
  margin-top: 30rpx;
}
.pin_list{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.pin_list image{
  display: block;
  width: 100%;
  height: 100%;
}