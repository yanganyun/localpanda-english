/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.top_banner{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.top_banner .slide-image{
  width: 100%;
}
.top_banner image{
  height: 100%;
}


.group_list_user{
  overflow: hidden;
  margin-top: 30rpx;
}
.pin_list{
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.pin_list image{
  display: block;
  width: 100%;
  height: 100%;
}